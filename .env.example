# Environment Variables Template
# Copy this file to .env and fill in your values

# Database
ConnectionStrings__Default=Data Source=App_Data/platformops.db

# Admin Account (first run)
ADMIN_EMAIL=admin@platformops.local
ADMIN_PWD=Admin@123456

# Demo Data
SEED_DEMO=true

# Integration Toggle (set to false when ready to use real APIs)
Integrations__UseMockData=true

# Azure DevOps
Integrations__AzureDevOps__OrganizationUrl=https://dev.azure.com/yourorg
Integrations__AzureDevOps__PersonalAccessToken=your-pat-here

# Jira
Integrations__Jira__BaseUrl=https://yourcompany.atlassian.net
Integrations__Jira__Email=your-email@company.com
Integrations__Jira__ApiToken=your-jira-token

# Azure Cost Management
Integrations__AzureCost__TenantId=your-tenant-id
Integrations__AzureCost__ClientId=your-client-id
Integrations__AzureCost__ClientSecret=your-client-secret
Integrations__AzureCost__Scope=/subscriptions/your-subscription-id

# SonarQube
Integrations__SonarQube__BaseUrl=https://sonarqube.yourcompany.com
Integrations__SonarQube__Token=your-sonar-token

# Checkmarx
Integrations__Checkmarx__BaseUrl=https://checkmarx.yourcompany.com
Integrations__Checkmarx__Token=your-checkmarx-token

# Microsoft Teams Webhooks
Integrations__Teams__WebhookGeneral=https://outlook.office.com/webhook/...
Integrations__Teams__WebhookService=https://outlook.office.com/webhook/...
Integrations__Teams__WebhookChange=https://outlook.office.com/webhook/...
Integrations__Teams__WebhookDBA=https://outlook.office.com/webhook/...

# Microsoft Graph (optional)
Integrations__Graph__TenantId=your-tenant-id
Integrations__Graph__ClientId=your-client-id
Integrations__Graph__ClientSecret=your-client-secret
Integrations__Graph__Enabled=false

# Azure OpenAI
Integrations__OpenAI__Endpoint=https://your-openai.openai.azure.com/
Integrations__OpenAI__Key=your-openai-key
Integrations__OpenAI__Deployment=gpt-4o-mini
Integrations__OpenAI__ApiVersion=2024-02-15-preview

# Application Insights (optional)
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;...

# Branding
BRAND__PrimaryColor=#0062E6
