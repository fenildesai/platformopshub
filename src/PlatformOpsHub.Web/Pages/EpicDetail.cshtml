@page "{id:int}"
@model EpicDetailModel
@{
    ViewData["Title"] = Model.Epic?.Title ?? "Epic Details";
}

@if (Model.Epic == null)
{
    <div style="padding: 2rem; text-align: center;">
        <h2 style="color: var(--text-dim);">Epic not found.</h2>
        <a href="/Epics" class="btn-premium" style="display: inline-block; margin-top: 1rem; text-decoration: none;">Back to List</a>
    </div>
}
else
{
    <div style="padding: 2rem; max-width: 1200px; margin: 0 auto;">
        <div class="animate-fade" style="margin-bottom: 2rem;">
            <a href="/Epics" style="color: var(--accent); text-decoration: none; font-size: 0.9rem; font-weight: 600;">‚Üê Back to Epics</a>
            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-top: 1rem;">
                <div>
                    <h1 style="margin: 0; font-weight: 800; font-size: 2.5rem;">@Model.Epic.Title</h1>
                    <div style="display: flex; gap: 1rem; margin-top: 0.5rem; align-items: center;">
                        <span class="badge" style="background: var(--gradient-premium); color: white;">@Model.Epic.TeamName</span>
                        <span class="badge badge-accent">@Model.Epic.Status</span>
                        @if (!string.IsNullOrEmpty(Model.Epic.JiraKey))
                        {
                            <span class="badge" style="background: rgba(255,255,255,0.1); color: var(--text-dim);">@Model.Epic.JiraKey</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
            <div class="glass-card animate-fade">
                <h3 style="margin-top: 0;">Description</h3>
                <p style="color: var(--text-dim); line-height: 1.6; font-size: 1.1rem;">@Model.Epic.Description</p>
                
                <h3 style="margin-top: 3rem;">Related Activities</h3>
                <div style="margin-top: 1rem;">
                    @foreach (var activity in Model.Epic.Activities)
                    {
                        <a href="/ActivityDetail/@activity.Id" style="text-decoration: none; color: inherit;">
                            <div class="glass-card" style="margin-bottom: 1rem; padding: 1rem; background: rgba(255,255,255,0.03); display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <div style="font-weight: 700;">@activity.Title</div>
                                    <div style="font-size: 0.8rem; color: var(--text-dim);">Owner: @activity.OwnerName</div>
                                </div>
                                <div class="badge badge-accent">@activity.Status</div>
                            </div>
                        </a>
                    }
                </div>
            </div>

            <div class="animate-fade" style="animation-delay: 0.2s;">
                <div class="glass-card" style="margin-bottom: 2rem;">
                    <h3 style="margin-top: 0;">Details</h3>
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <div>
                            <div class="stat-label">Reporter</div>
                            <div style="font-weight: 600;">@Model.Epic.CreatedBy</div>
                        </div>
                        <div>
                            <div class="stat-label">Last Updated</div>
                            <div style="font-weight: 600;">@Model.Epic.UpdatedAt.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div>
                            <div class="stat-label">Progress</div>
                            <div style="background: rgba(255,255,255,0.1); height: 8px; border-radius: 4px; margin-top: 0.5rem;">
                                <div style="background: var(--gradient-premium); height: 100%; border-radius: 4px; width: 65%;"></div>
                            </div>
                            <div style="font-size: 0.75rem; text-align: right; margin-top: 0.3rem; color: var(--text-dim);">65% Complete</div>
                        </div>
                    </div>
                </div>

                <div class="glass-card" style="background: rgba(191, 90, 242, 0.05); border: 1px solid rgba(191, 90, 242, 0.2);">
                    <h3 style="margin-top: 0; color: var(--accent);">Actions</h3>
                    <div style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1rem;">
                        <button class="btn-premium" style="width: 100%;">View in Jira</button>
                        <button class="btn-premium" style="width: 100%; background: rgba(255,255,255,0.1);">Assign Member</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
