@page
@model EpicsModel
@{
    ViewData["Title"] = "Epics";
}

<div style="padding: 2rem;">
    <div class="animate-fade">
        <h1 style="margin: 0; font-weight: 800; font-size: 2.5rem;">Epics</h1>
        <p style="color: var(--text-dim); margin-bottom: 2rem;">Large-scale initiatives across PlatformOps teams.</p>
    </div>

    <div class="grid-cols-4" style="grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));">
        @foreach (var epic in Model.Epics)
        {
            <a href="/EpicDetail/@epic.Id" style="text-decoration: none; color: inherit;">
                <div class="glass-card animate-fade">
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                        <span class="badge badge-accent">@epic.JiraKey</span>
                        <span class="badge @(epic.Status == PlatformOpsHub.Domain.Enums.EpicStatus.Done ? "badge-success" : epic.Status == PlatformOpsHub.Domain.Enums.EpicStatus.InProgress ? "badge-accent" : "badge-warning")">
                            @epic.Status
                        </span>
                    </div>
                    
                    <h3 style="margin: 0.5rem 0; font-size: 1.4rem;">@epic.Title</h3>
                    <p style="color: var(--text-dim); font-size: 0.9rem; min-height: 3rem;">@epic.Description</p>
                    
                    <div style="margin-top: 1.5rem; display: flex; justify-content: space-between; align-items: center; border-top: 1px solid var(--border-glass); padding-top: 1rem;">
                        <div style="font-size: 0.8rem; font-weight: 600;">@epic.TeamName</div>
                        <div style="font-size: 0.75rem; color: var(--text-dim);">Updated: @epic.UpdatedAt.ToString("MMM dd")</div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
