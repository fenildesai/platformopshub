@page
@model ChangeTeamHubModel
@{
    ViewData["Title"] = "Change Team Hub";
}

<div style="padding: 2rem;">
    <div class="animate-fade">
        <h1 style="margin: 0; font-weight: 800; font-size: 2.5rem;">Change Team Hub</h1>
        <p style="color: var(--text-dim); margin-bottom: 2rem;">Platform transformation, modernization, and cost efficiency initiatives.</p>
    </div>

    <div class="grid-cols-4">
        <!-- Cost Savings Card -->
        <div class="glass-card animate-fade" style="border-left: 4px solid #30d158;">
            <div class="stat-label">Savings Achieved YTD</div>
            <div class="stat-value" style="color: #30d158;">£@((Model.Stats.AnnualCostTarget - Model.Stats.CostYTD).ToString("N0"))</div>
            <div style="font-size: 0.8rem; color: var(--text-dim);">Target Remaining: £@Model.Stats.CostYTD.ToString("N0")</div>
        </div>

        <!-- GenAI Card -->
        <div class="glass-card animate-fade" style="border-left: 4px solid var(--accent); animation-delay: 0.1s;">
            <div class="stat-label">GenAI Initiatives</div>
            <div class="stat-value">@Model.Stats.GenAIInitiativesCount</div>
            <div style="font-size: 0.8rem; color: var(--text-dim);">Active Transformation Streams</div>
        </div>

        <!-- Efficiency Card -->
        <div class="glass-card animate-fade" style="border-left: 4px solid var(--primary); animation-delay: 0.2s;">
            <div class="stat-label">Lead Time Reduction</div>
            <div class="stat-value">-15.5%</div>
            <div style="font-size: 0.8rem; color: var(--text-dim);">Compared to 2025 baseline</div>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-top: 2rem;">
        <!-- Roadmap / Initiatives -->
        <div class="glass-card animate-fade" style="animation-delay: 0.3s;">
            <h3 style="margin-top: 0;">2026 Transformation Roadmap</h3>
            <div style="margin-top: 2rem;">
                <div style="display: flex; gap: 1.5rem; margin-bottom: 2rem;">
                    <div style="width: 2px; background: var(--gradient-premium); border-radius: 1px;"></div>
                    <div>
                        <div style="font-weight: 700; color: var(--accent);">Q1: Foundation & Cost</div>
                        <p style="color: var(--text-dim); font-size: 0.9rem;">Right-sizing foundational infrastructure and implementing auto-shutdown policies. (Target: £50K savings)</p>
                    </div>
                </div>
                <div style="display: flex; gap: 1.5rem; margin-bottom: 2rem; opacity: 0.7;">
                    <div style="width: 2px; background: rgba(255,255,255,0.2); border-radius: 1px;"></div>
                    <div>
                        <div style="font-weight: 700;">Q2: GenAI Integration</div>
                        <p style="color: var(--text-dim); font-size: 0.9rem;">Deploying AI-assisted code review and automated PR summaries across 50% of platform repositories.</p>
                    </div>
                </div>
                <div style="display: flex; gap: 1.5rem; opacity: 0.5;">
                    <div style="width: 2px; background: rgba(255,255,255,0.1); border-radius: 1px;"></div>
                    <div>
                        <div style="font-weight: 700;">Q3: Serverless Modernization</div>
                        <p style="color: var(--text-dim); font-size: 0.9rem;">Migrating legacy monolithic services to Azure Container Apps and serverless functions.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="glass-card animate-fade" style="animation-delay: 0.4s; background: rgba(191, 90, 242, 0.05); border: 1px solid rgba(191, 90, 242, 0.2);">
            <h3 style="margin-top: 0; color: var(--accent);">Change Tools</h3>
            <div style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1.5rem;">
                <a href="#" class="btn-premium" style="text-align: center; text-decoration: none;">Cost Analyzer</a>
                <a href="#" class="btn-premium" style="text-align: center; text-decoration: none; background: rgba(255,255,255,0.05);">GenAI Sandbox</a>
                <a href="#" class="btn-premium" style="text-align: center; text-decoration: none; background: rgba(255,255,255,0.05);">Impact Calculator</a>
            </div>
        </div>
    </div>
</div>
