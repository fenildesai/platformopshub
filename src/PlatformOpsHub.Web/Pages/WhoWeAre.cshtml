@page
@model WhoWeAreModel
@{
    ViewData["Title"] = "Who We Are";
}

<div style="padding: 2rem;">
    <div class="animate-fade">
        <h1 style="margin: 0; font-weight: 800; font-size: 2.5rem;">The Platform Collective</h1>
        <p style="color: var(--text-dim); margin-bottom: 3rem;">Meet the engineers, architects, and visionaries building our future.</p>
    </div>

    @foreach (var team in Model.Teams)
    {
        <div style="margin-bottom: 4rem;">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem; border-left: 4px solid var(--accent); padding-left: 1.5rem;">
                <div>
                    <h2 style="margin: 0; font-size: 2rem; font-weight: 800;">@team.Name</h2>
                    <p style="color: var(--text-dim); margin: 0.2rem 0 0 0; font-size: 1rem;">@team.Description</p>
                </div>
            </div>

            <div class="grid-cols-4" style="grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); padding: 0;">
                @foreach (var member in team.Members)
                {
                    <div class="glass-card animate-fade" style="padding: 0; overflow: hidden; height: 100%; display: flex; flex-direction: column; transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);">
                        <div style="height: 120px; background: var(--gradient-premium); position: relative;">
                            <div style="position: absolute; bottom: -40px; left: 20px; width: 80px; height: 80px; border-radius: 20px; background: #1c1c1e; border: 4px solid #1c1c1e; display: flex; align-items: center; justify-content: center; box-shadow: 0 8px 16px rgba(0,0,0,0.4);">
                                @if (!string.IsNullOrEmpty(member.PhotoUrl))
                                {
                                    <img src="@member.PhotoUrl" style="width: 100%; height: 100%; border-radius: 16px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span style="font-weight: 800; font-size: 1.5rem; background: var(--gradient-premium); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                                        @string.Concat(member.DisplayName.Split(' ').Select(n => n[0]))
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <div style="padding: 50px 20px 20px 20px; flex: 1;">
                            <div style="font-weight: 800; font-size: 1.2rem; display: flex; align-items: center; gap: 0.5rem;">
                                @member.DisplayName
                                <i class="fas fa-check-circle" style="color: #0a84ff; font-size: 0.8rem;"></i>
                            </div>
                            <div class="stat-label" style="font-size: 0.75rem; margin-top: 0.2rem; color: var(--accent);">@member.Role.ToUpper()</div>
                            
                            @if (!string.IsNullOrEmpty(member.Squad))
                            {
                                <div style="margin-top: 1rem; padding: 0.5rem; background: rgba(255,255,255,0.03); border-radius: 8px; font-size: 0.85rem; color: var(--text-dim); display: flex; align-items: center; gap: 0.5rem;">
                                    <i class="fas fa-layer-group" style="font-size: 0.7rem;"></i>
                                    @member.Squad
                                </div>
                            }

                            <div style="display: flex; gap: 0.4rem; flex-wrap: wrap; margin-top: 1.2rem;">
                                <span class="badge" style="font-size: 0.6rem; background: rgba(10, 132, 255, 0.1); color: #0a84ff; border: 1px solid rgba(10, 132, 255, 0.2);">Cloud Native</span>
                                <span class="badge" style="font-size: 0.6rem; background: rgba(191, 90, 242, 0.1); color: #bf5af2; border: 1px solid rgba(191, 90, 242, 0.2);">Automation</span>
                                <span class="badge" style="font-size: 0.6rem; background: rgba(48, 209, 88, 0.1); color: #30d158; border: 1px solid rgba(48, 209, 88, 0.2);">Security</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .glass-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0,0,0,0.6);
    }
</style>
